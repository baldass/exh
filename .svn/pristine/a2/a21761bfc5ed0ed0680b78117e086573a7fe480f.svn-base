body {
	font-family: "Microsoft YaHei";
	color: white;
}
/* 标题 */
#border_blue_total_title h4 {
	color: black;
	text-align: center; /*让div内部文字居中*/
	background-color: #fff;
	border-radius: 20px;
	width: 300px;
	line-height: 30px; /*让黄色div中的文字内容垂直居中*/
	margin: auto;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	-moz-border-radius: 20px;
	-webkit-border-radius: 20px;
}

/* 主体表格 */
#border_main_table_div {
	margin-left: 30px;
	padding-top: 50px;
	width: 100%;
}

/* 背景 */
.border_blue_bg {
	background: url(/img/ui/exh_bg2.jpg) no-repeat;
	filter:
	"progid:DXImageTransform.Microsoft.AlphaImageLoader(sizingMethod='scale')";
	-moz-background-size: 100%  100%;
	background-size: 100%  100%;
	background-attachment: fixed;
}
/* 看板具体项标题 */
.border_table_title {
	background: #0a4869;
	margin: 0px;
	padding: 2px 2px 2px 15px;
}
/* 具体项 */
#border_main_table td{
	padding: 5px;
	vertical-align: top;
}
/* 具体项 */
.border_table_content {
	color: #44d3e4;
}
/* 表格 */
.border_table_order_list td {
	padding: 5px;
	vertical-align: top;
}
/* 圆形 */
.border_table_order_list .border_order_circle {
	color: white;
	width: 20px;
	height: 20px;
	background-color: #44d3e4;
	border-radius: 50%;
	-moz-border-radius: 50%;
	-webkit-border-radius: 50%;
}
/* 设备监控 --关闭*/
.device_item_stop .device_item_div{
	width: 15px;
	height: 15px;
	background-color: blue;
	border-radius: 50%;
	-moz-border-radius: 50%;
	-webkit-border-radius: 50%;
}
/* 设备监控--正常 */
.device_item_run .device_item_div{
	width: 15px;
	height: 15px;
	background-color: green;
	border-radius: 50%;
	-moz-border-radius: 50%;
	-webkit-border-radius: 50%;
}
/* 设备监控 --异常 */
.device_item_err .device_item_div{
	width: 15px;
	height: 15px;
	background-color: red;
	border-radius: 50%;
	-moz-border-radius: 50%;
	-webkit-border-radius: 50%;
}
/* 任务池 */
#border_dispatch_circle {
	color: black;
	text-align: center; /*让div内部文字居中*/
	background-color: #fff;
	border-radius: 20px;
	width: 100px;
	line-height: 30px; /*让黄色div中的文字内容垂直居中*/
	margin: auto;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	-moz-border-radius: 20px;
	-webkit-border-radius: 20px;
}
/* 订单选择按钮 */
#border_order_picker_circle {
	color: black;
	text-align: center; /*让div内部文字居中*/
	background-color: #fff;
	border-radius: 20px;
	width: 100px;
	line-height: 30px; /*让黄色div中的文字内容垂直居中*/
	margin: auto;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	-moz-border-radius: 20px;
	-webkit-border-radius: 20px;
}
